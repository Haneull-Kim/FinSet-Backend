<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="board.mapper.BoardMapper">

    <resultMap id="attachmentMap" type="board.domain.BoardAttachmentVO">
        <id column="ano" property="bno"/>
        <result column="bno" property="bno"/>
        <result column="path" property="path"/>
        <result column="content_type" property="contentType"/>
        <result column="size" property="size"/>
        <result column="a_reg_date" property="regDate"/>
    </resultMap>

    <resultMap id="boardMap" type="board.domain.BoardVO">
        <id column="bno" property="bno"/>
        <result column="content" property="content"/>
        <result column="writer" property="writer"/> <!-- This should match the new structure if needed -->
        <result column="createdAt" property="createdAt"/> <!-- Updated to match the DB schema -->
        <result column="updatedAt" property="updatedAt"/> <!-- Ensure this column exists in the DB -->
        <collection property="attaches" resultMap="attachmentMap"/>
    </resultMap>

    <select id="getList" resultType="board.domain.BoardVO">
        <![CDATA[
        SELECT * FROM tbl_board ORDER BY bno DESC
        ]]>
    </select>

    <select id="get" resultMap="boardMap">
        SELECT b.*, a.no AS ano, a.bno, a.path,
               a.content_type, a.size, a.reg_date AS a_reg_date
        FROM tbl_board b
                 LEFT OUTER JOIN tbl_board_attachment a ON b.bno = a.bno
        WHERE b.bno = #{bno}
        ORDER BY a.path
    </select>

    <insert id="create">
        INSERT INTO tbl_board (content, writer) <!-- Removed title -->
        VALUES (#{content}, #{writer})
        <selectKey resultType="Long" keyProperty="bno" order="AFTER">
            SELECT LAST_INSERT_ID()
        </selectKey>
    </insert>

    <update id="update">
        UPDATE tbl_board
        SET
        content = #{content},
        writer = #{writer},
        updatedAt = NOW() <!-- Ensure this column exists in the DB -->
        WHERE bno = #{bno}
    </update>

    <delete id="delete">
        DELETE FROM tbl_board WHERE bno = #{bno}
    </delete>

    <insert id="createAttachment">
        INSERT INTO tbl_board_attachment (path, content_type, size, bno)
        VALUES (#{path}, #{contentType}, #{size}, #{bno})
    </insert>

    <select id="getAttachmentList" resultType="board.domain.BoardAttachmentVO">
        SELECT * FROM tbl_board_attachment
        WHERE bno = #{bno}
        ORDER BY path
    </select>

    <select id="getAttachment" resultType="board.domain.BoardAttachmentVO">
        SELECT * FROM tbl_board_attachment
        WHERE bno = #{bno} <!-- Corrected from no to bno -->
    </select>

    <select id="getTotalCount" resultType="java.lang.Integer">
        SELECT COUNT(*) FROM tbl_board
    </select>

    <select id="getPage" resultType="board.domain.BoardVO">
        SELECT * FROM tbl_board ORDER BY bno DESC
            LIMIT #{offset}, #{amount}
    </select>

    <delete id="deleteAttachment">
        DELETE FROM tbl_board_attachment
        WHERE no = #{bno} <!-- Ensure this is correct based on your schema -->
    </delete>

</mapper>
