<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="member.mapper.MemberMapper">
    <resultMap id="memberMap" type="member.dto.Member">
        <id property="uno" column="uno"/>
        <result property="email" column="email"/>
        <result property="password" column="password"/>
        <result property="name" column="user_name"/>
        <result property="status" column="status"/>
        <result property="createdAt" column="createdAt"/>
        <result property="statusDate" column="statusDate"/>
    </resultMap>

    <select id="getMember" resultMap="memberMap">
        SELECT * FROM tbl_user WHERE status = 1 AND uno = #{uno}
    </select>

    <select id="findByUserName" resultMap="memberMap">

    </select>

    <select id="findByUserEmail" resultMap="memberMap">

    </select>
    <select id="selectByEmail" resultMap="memberMap" parameterType="string">
        SELECT * FROM tbl_user WHERE status = 1 AND email = #{email}
    </select>


    <insert id="insertMember">
        INSERT INTO tbl_user (email, password, user_name)
        VALUES (#{email}, #{password}, #{name})
    </insert>

</mapper>
